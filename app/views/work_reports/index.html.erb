<% html_title(l(:work_reports_title)) %>
<%= content_tag(:h1, l(:work_reports_title)) %>

<div class="projects">
  <% @projects.each do |project| %>
    <div id="project_<%= project.id -%>">
      <h2><%= h(project.name) %></h2>
      
      <ul>
        <li class="backlog-time">Backlog time: <%= format_days(project.backlog_time) %></li>
        <li class="completion-time">Completion time: <%= format_days(project.completion_time) %></li>
      </ul>
    </div>
  <% end %>
</div>
